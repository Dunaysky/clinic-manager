<%= form_with(url: "/doctors", method: :get, local: true, class: 'header-wrapper') do |form| %>
    <%= form.collection_select(:category, Category.all, :id, :name, {include_blank: 'All'}, {class: 'header-selection'}) %>
    <%= form.submit "Filter", class: 'header-button' %>
<% end%>
<table class="doctors-table">
  <tr>
    <th>Full Name</th>
    <th>Category</th>
    <th>Actions</th>
  </tr>
  <%= render partial: 'doctors/single_doctor', collection: @doctors, as: :doctor %>
</table>
